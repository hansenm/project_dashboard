<h1>Projects</h1>

<%= link_to new_project_path do %>
  <i class="icon icon-plus"> </i> Add a New Project
<% end %>

<table class="table table-striped">

  <thead>
    <tr><th>Name</th><th>Manager</th><th>Organization</th><th>Status</th><th>Summary</th></tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= project.manager %></td>
        <td><%= project.organization %></td>
        <td><%= project.current_status_report.overall unless project.current_status_report.nil? %></td>
        <td><%= project.current_status_report.summary unless project.current_status_report.nil? %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>