<table class="table table-striped">

  <thead>
    <tr><th>Status</th><th>Project</th><th>Manager</th><th>Organization</th><th>Summary</th></tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><span class="status <%= overall_status_indicator(project.overall) %>"></span></td>
        <td><%= link_to project.name, project %></td>
        <td><%= project.manager %></td>
        <td><%= project.organization %></td>
        <td><%= project.current_status_report.summary unless project.current_status_report.nil? %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>