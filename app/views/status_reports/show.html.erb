<h1>Status Report for <%= link_to @status_report.project.name, project_path(@status_report.project) %></h1>

<%= link_to edit_project_status_report_path(@status_report.project, @status_report) do %>
  <i class="icon icon-edit"> </i> Edit
<% end %>

<%= link_to project_status_report_path(@status_report.project, @status_report), method: "Delete", data: { confirm: "Are you sure you want to delete this status report?" } do %>
  <i class="icon icon-trash"> </i> Delete
<% end %>

<%= render partial: 'detail', locals: { status_report: @status_report }%>
